<% @page_title = application_name + " Contact Us" %>

<% if user_signed_in? %>
  <% nm = current_user.name %>
  <% em = current_user.email_address %>
<% else %>
  <% nm = '' %>
  <% em = '' %>
<% end %>

  <div class="bottom-border"></div>
  <h2 class="blue-heading">Contact us</h2>
</div>
<div class="gutter-container">
  <%= form_for(@contact_form, :url => sufia.contact_form_index_path, :html => {:class => 'form-horizontal well'}) do |f| %>
    <div class="col col3of4">
      <div class="content-box padding-20">
        <div class="notification">
          <%= render partial: 'directions' %>
        </div>

        <table>
          <tr style="height: 45px;">
            <th>Issue type</th>
            <td>
              <%= f.select 'category', options_for_select(ContactForm::ISSUE_TYPES), {:include_blank => "Select type of issue"}, {:class=> 'input-large', :required => true } %>
            </td>
          </tr>
          <tr>
            <th>Your Name</th>
            <td>
              <%= f.text_field :name, :class=>"input-xlarge", :value => nm, :required => true %>
            </td>
          </tr>
          <tr>
            <th>Your Email</th>
            <td>
              <%= f.text_field :email, :class=>"input-xlarge", :value => em, :required => true %>
            </td>
          </tr>
          <tr>
            <th>Subject</th>
            <td>
              <%= f.text_field :subject, :class=>"input-xlarge", :value=>"", :required => true %>
            </td>
          </tr>
          <tr>
            <th>Message</th>
            <td>
              <%= f.text_area :message, :class=>"input-xlarge", :value=>"", :required => true %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= f.button "Send", :type=>"submit", :class=>"button" %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
</div>
