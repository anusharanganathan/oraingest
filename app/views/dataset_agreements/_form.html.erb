<div class="tab-pane" id="describetab">
  <%= form_for(@dataset_agreement) do |f| %>
    <%= hidden_field_tag(:pid, @pid) %>
    <%= hidden_field_tag('redirect_tab', 'describetab') %>
    <div class="well">
      <div class="row">
        <div class="control-group">
          <%= render partial: "describe_fields_edit", as: :dataset_agreement, :locals => { :f => f } %>
          <div class="actions">
            <%= f.submit "Save dataset agreement", class: "btn btn-success" %>
          </div><!-- /.actions -->
        </div><!-- /.control-group -->
      </div> <!-- /.row -->
    </div> <!-- /.well -->
  <% end %>
</div>

