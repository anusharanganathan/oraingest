<% msg = '<a href="%s">Login</a> to see your recently added datasets'%new_user_session_path if msg.blank? and current_user.blank? %>
<% msg = 'You have no datasets to display. Contribute some of your datasets!' if msg.blank? %>

<% # container for all documents in index view -%>
<% if docs.blank? %>
  <p>  <%= raw(msg) %> </p>
<% else %>
  <table class="article-table">
    <thead>
      <tr>
        <th>Dataset details</th>
        <th width="150">Status and action</th>
      </tr>
    </thead>
    <tbody>
      <% docs.each do |document| %>
        <% path = document_url(document.modelName, 'show', document.id) %>
        <%= render :partial => "show_dataset", :locals=>{:document => document } %>
      <% end %>
    </tbody>
  </table>
<% end %>
<div id="documents" class="clear">

