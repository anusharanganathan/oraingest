    <%= agent_form.radio_button :third_party_copyright, "No Third Party copyright" %>
    <%= agent_form.label :third_party_copyright, "No Third Party copyright" %>
    <%= agent_form.radio_button :third_party_copyright, "Cleared Third Party copyright" %>
    <%= agent_form.label :third_party_copyright, "Cleared Third Party copyright" %>
