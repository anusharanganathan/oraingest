    <%= agent_form.label :rights_ownership, "Sole authorship" %>
    <%= agent_form.radio_button :rights_ownership, "Joint authorship" %>
    <%= agent_form.label :rights_ownership, "Joint authorship" %>
    <%= agent_form.radio_button :rights_ownership, "Other party" %>
    <%= agent_form.label :rights_ownership, "Other party" %>
    <%= agent_form.radio_button :rights_ownership, "Publisher has copyright" %>
