  <%= f.fields_for :agent do |agent_form| %>
    <%= agent_form.label :display_name %>
    <%= agent_form.text_field :display_name %>
    <%= agent_form.hidden_field :role, :value =>"Copyright holder" %>
    <%#= agent_form.hidden_field :agent[count]['type'], :value =>"personal" %>
