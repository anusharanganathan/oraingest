<div class="fieldset">
  <p class="small">Title</p>
  <%= f.text_field :title, :value=>@article.title.first, :required=>true, :style=>'width: 60%', data: {"progress" => "citation"} %>
  <%= render partial: '/shared/tooltip', :locals => {:tipType => "citation", :tipTitle => "Title", :tipDescription =>"Enter the title by which your publication should be known and cited." } %>
</div>

<div class="fieldset">
  <p class="small">Subtitle</p>
  <%= f.text_field :subtitle, :value=>@article.subtitle.first, :style=>'width: 60%', data: {"progress" => "discoverability"} %>
  <%= render partial: '/shared/tooltip', :locals => {:tipType => "discoverability", :tipTitle => "Subtitle", :tipDescription =>"If you would like to give your publication a sub-title, enter it here." } %>
</div>

<div class="fieldset">
  <p class="small">Abstract</p>
  <%= f.text_area :abstract, :value=>@article.abstract.first, :style=>'width: 60%', data: {"progress" => "discoverability"} %>
  <%= render partial: '/shared/tooltip', :locals => {:tipType => "discoverability", :tipTitle => "Abstract", :tipDescription =>"If you would like to give us an abstract of your publication, enter it here." } %>
</div>

<% if !@article.medium.nil? && !@article.medium.empty? && !@article.medium.first.empty? %>
  <!-- Only display if information exists i.e. imported records -->
  <div class="fieldset">
    <p class="small">Medium</p>
    <%= f.text_field :medium, :value=>@article.medium.first, data: {"progress" => "discoverability"} %>
    <%= render partial: '/shared/tooltip', :locals => {:tipType => "discoverability", :tipTitle => "Medium", :tipDescription =>"If you would like to tell us the medium of your publication, enter it here." } %>
  </div>
<% end %>

