<section class="form-step" style="display: block;">
  <!-- file upload -->
  <div class="content-box padding-0">
    <div class="content-box-header">
      Deposit Article
    </div>
    <div class="padding-25 no-pad-bottom">
      <%= render partial: 'articles/_edit_short/files_form' %>
    <div class="bottom-border"></div>
  </div>

  <%= form_for(@article) do |f| %>
    <%= hidden_field_tag(:pid, @pid) %>

    <!-- publication info -->
    <div class="padding-side-25 bottom-border">
      <%= render partial: 'shared/publication_activity/article_fields_short_edit', :locals => { :f => f, :publication => @article.publication } %>
    </div>

    <!-- apc info -->  
    <div class="padding-side-25"> 
      <%= render partial: "/articles/_edit_short/admin_fields_edit", :locals => { :f => f, :article => @article } %>
    </div>
  </div>
  
    <!-- Expander -->
    <div class="content-box padding-0" style="margin-top: 20px;">
      <div class="content-box-header expand-header">
        Add funder and other information to your article record 
      </div>
      <div class="expand-content">

        <!-- funder info -->
        <div class="padding-side-25"> 
          <%= render partial: 'shared/funding_activity_fields_edit', :locals => { :f => f, :funding => @article.funding } %>
        </div>
        <div class="bottom-border padding-side-25"></div>

        <!-- creator info -->
        <%= render partial: 'shared/creation_activity_fields_edit', :locals => { :f => f, :creation => @article.creation, :label => "creator" } %>
        <div class="bottom-border padding-side-25"></div>
  
        <!-- Related item -->
        <%= render partial: 'shared/relation_fields_edit', :locals => { :f => f, :qualifiedRelation => @article.qualifiedRelation } %>

      </div>
    </div>
  
    <!-- Form submit (save) -->
    <nav class="form-nav">
      <div class="form-nav-next">
        <%= f.submit "Save article", class: "button light-blue" %>
      </div>
    </nav>
  
  <% end %>

  <!--- Submit button -->
  <%= form_for @article, :html => {:multipart => true, :class => 'form-horizontal', :id => 'workflow'} do |f| %>
    <%= hidden_field_tag(:pid, @pid) %>
    <% buttonText = 'Submit for Review' %>
    
    <nav class="form-nav">
      <div class="form-nav-next">
        <% txt = '<i class="icon-save"></i> %s'% buttonText %>
        <%= render partial: 'shared/workflow_submit', :locals => { :f => f, :article => @article} %>
        <%= button_tag txt.html_safe, :type => 'submit', :class => 'button light-blue', :onclick => "confirmation_needed = false;", :id => "upload_submit", :name => "update_workflow" %>
      </div>
    </nav>
  <% end %>

</section>
